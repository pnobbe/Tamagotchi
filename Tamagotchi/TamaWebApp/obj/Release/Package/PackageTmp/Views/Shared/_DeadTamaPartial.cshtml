@model IEnumerable<TamaWebApp.TamaService.Tamagotchi>

<div class="panel panel-default" id="panel1">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapseTwo"
               href="#collapseTwo">
                Dood
            </a>
        </h4>

    </div>
    <div id="collapseTwo" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="text-center">
                <div class="col-lg-12">
                        @foreach (var item in Model)
                        {
                           if (item.isDead)
                            {
                                <a href="/Home/Tamagotchi/@item.Id">
                                    <div class="col-lg-2 tamaBox">
                                        <p>@Html.DisplayFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
                                        <p><img height="100" width="auto" src="~/Content/img/sprites/Dead.PNG" /></p>
                                    </div>
                                </a>
                            }
                        }
                </div>
            </div>
        </div>
    </div>
</div>