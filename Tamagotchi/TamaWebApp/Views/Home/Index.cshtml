@model IEnumerable<TamaWebApp.Models.Tamagotchi>

<div class="container">
    <div class="row">
        <div class="mainBox">
            <div class="col-lg-12 text-center">
                <h1 class="brand-name">Welkom bij</h1>

                <img src="~/Content/img/title.png" height="200px" width="auto" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Selecteer jouw <strong>Tamagotchi</strong> om te beginnen!
                </h2>
                <hr>
                @Html.Partial("_newTamagotchiPartial", new TamaWebApp.Models.Tamagotchi())
            </div>
            <div class="text-center">
                <div class="col-lg-12">
                    <table class="table">
                        <tr>
                            <th>
                                Naam
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            using (Html.BeginForm("Tamagotchi", "Home"))
                            {
                                @Html.AntiForgeryToken()
                                <tr>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(modelItem => item.Id)
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                    <td>
                                        <button type="submit" value="Tamagotchi" class="button-default">Click</button>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>

        <hr class="visible-xs">


    </div>
</div>
