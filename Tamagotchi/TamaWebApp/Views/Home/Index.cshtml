@model TamaWebApp.Models.Tamagotchi;

<div class="container">
    <div class="row">
        <div class="mainBox">
            <div class="col-lg-12 text-center">
                <h1 class="brand-name">Welkom bij</h1>

                <img src="~/Content/img/title.png" height="200px" width="auto" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Selecteer jouw <strong>Tamagotchi</strong> om te beginnen!
                </h2>
                <hr>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="newTama">
                        <p class="text-center">
                            Heb je nog geen <strong>Tamagotchi</strong>? Vul een naam in en maak hem aan!
                        </p>
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            <p class="text-center">
                                @Html.EditorFor(model => model, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                <button type="button" value="Add">Aanmaken</button>
                            </p>
                        </div>

                    </div>
                }
                <p class="text-center">
                    *Insert Tamagotchis!*
                </p>
                <hr class="visible-xs">


            </div>
        </div>
    </div>
</div>