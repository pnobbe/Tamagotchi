@model TamaWebApp.TamaService.Tamagotchi

<p id="errorBox" class="text-center" style="color: red;" hidden>Er is een probleem ontstaan bij het verbinden met de server. Probeer het later nog eens!</p>
<div class="container">
    @Html.Partial("_TamaShowPartial")
    @Html.Partial("_TamaRuleMenuPartial")
    <div class="row">
        <div class="box">
            <div class="text-center">
                <div class="col-lg-12">
                    <table class="table">
                        <th>Status</th>
                        <th>Waarde</th>
                        <th>Actie</th>
                        <tr class="h3">
                            <td>
                                Gezondheid
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Health)
                            </td>
                            <td>
                                @Html.ActionLink("Trainen", "Workout", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                            </td>
                        </tr>
                        <tr class="h3">
                            <td>
                                Honger
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Hunger)
                            </td>
                            <td>
                                @Html.ActionLink("Eten", "Eat", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                            </td>
                        </tr>
                        <tr class="h3">
                            <td>
                                Vermoeidheid
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Sleep)
                            </td>
                            <td>
                                @Html.ActionLink("Slapen", "Sleep", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                            </td>
                        </tr>
                        <tr class="h3">
                            <td>
                                Verveeldheid
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Boredom)
                            </td>
                            <td>
                                @Html.ActionLink("Knuffelen", "Hug", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                                @Html.ActionLink("Spelen", "Play", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>