@model TamaWebApp.TamaService.Tamagotchi

<p id="errorBox" class="text-center" style="color: red;" hidden>Er is een probleem ontstaan bij het verbinden met de server. Probeer het later nog eens!</p>
<div class="container">
    @Html.Partial("_TamaShowPartial")
    @Html.Partial("_TamaRuleMenuPartial")
    <div class="row">
        <div class="box">
            <div class="text-center">
                <div class="col-lg-12">
                    <p id="timer">Klaar voor de volgende actie!</p>
                    <div class="col-lg-12">
                        <p>Gezondheid</p>
                        <div class="progress">
                            <div class="progress-bar practive" role="progressbar"
                                 aria-valuenow="@Model.Health" aria-valuemin="0" aria-valuemax="100" style="width:@Model.Health%">
                                @Model.Health%
                            </div>
                        </div>
                        <p>@Html.ActionLink("Trainen", "Workout", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })</p>
                    </div>
                    <div class="col-lg-4">
                        <p>Honger</p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@Model.Hunger"
                                 aria-valuemin="0" aria-valuemax="100" style="width:@Model.Hunger%">
                                @Model.Hunger%
                            </div>
                        </div>
                        <p>@Html.ActionLink("Eten", "Eat", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })</p>
                    </div>
                    <div class="col-lg-4">
                        <p>Vermoeidheid</p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@Model.Sleep"
                                 aria-valuemin="0" aria-valuemax="100" style="width:@Model.Sleep%">
                                @Model.Sleep%
                            </div>
                        </div>
                        <p>@Html.ActionLink("Slapen", "Sleep", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })</p>
                    </div>
                    <div class="col-lg-4">
                        <p>Verveeldheid</p>

                        <div class="progress">
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@Model.Boredom"
                                 aria-valuemin="0" aria-valuemax="100" style="width:@Model.Boredom%">
                                @Model.Boredom%
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Knuffelen", "Hug", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                            @Html.ActionLink("Spelen", "Play", "Tamagotchi", new { Id = Model.Id }, new { @class = "button-link" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        GetState(@Model.Id);
        GetCooldown(@Model.Id);
        SetFlags()
    });

    function GetCooldown(inputid) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetCooldown", "Tamagotchi")',
            data: { id: inputid },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            cache: false,
            async: false,
            success: function (msg) {
                SetTime(msg.status);
            },
            error: function (e) {
                alert(e.status + " failed to init countdown timer")
            }
        });
    };

    function SetTime(seconds) {
        var timerDone = document.getElementById("timer");
        var counter = seconds;
        var newElement = document.createElement("p");
        newElement.innerHTML = "";
        var id;

        timerDone.parentNode.replaceChild(newElement, timerDone);

        id = setInterval(function () {
            counter--;
            if (counter < 0) {
                newElement.parentNode.replaceChild(timerDone, newElement);
                clearInterval(id);
            } else {
                newElement.innerHTML = "Volgende actie is beschikbaar in " + counter.toString() + " seconden.";
            }
        }, 1000);
    }
</script>