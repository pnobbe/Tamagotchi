@model TamaWebApp.Models.Tamagotchi

@using (Html.BeginForm("Add", "Tamagotchi"))
{
    @Html.AntiForgeryToken()

    <div class="newTama">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center">
            Heb je nog geen <strong>Tamagotchi</strong>? Vul een naam in en maak er een aan!
            <br />
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            <button type="submit" value="Add" class="button-default">Toevoegen</button>
            <br />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
}